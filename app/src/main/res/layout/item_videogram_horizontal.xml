<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ln_vg_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/oneline_vg_margin_top">

    <RelativeLayout
        android:id="@+id/keyframe_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img_keyframe"
            android:layout_width="@dimen/rounded_photo_width"
            android:layout_height="@dimen/rounded_photo_width" />

        <ImageView
            android:id="@+id/ic_read_status"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/keyframe_layout"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/oneline_vg_sender_name_text_size"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/txt_created_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/oneline_vg_date_text_size"
            android:textColor="@color/normal_gray_text"/>

        <TextView
            android:id="@+id/txt_action_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/oneline_vg_action_text_size"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/txt_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            style="@style/textview_action_style"/>

        <TextView
            android:id="@+id/txt_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync"
            style="@style/textview_action_style"/>

        <TextView
            android:id="@+id/txt_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            style="@style/textview_action_style"/>
    </LinearLayout>


</RelativeLayout>
